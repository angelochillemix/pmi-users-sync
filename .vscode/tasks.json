{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Test Wordpress",
      "type": "shell",
      "command": "./bin/install-wp-tests.sh",
      "args": [
        "wordpress_test",
        "angelo",
        "''",
        "localhost",
        "5.9"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Wordpress Tests",
      "type": "shell",
      "command": "./vendor/bin/phpunit",
      "args": [
         "-v",
         "-dxdebug.mode=debug,develop",
         "-dxdebug.profiler_enable=on",
         "-dxdebug.idekey=VSCODE",
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "Run Wordpress Tests (with logs permission)",
      "dependsOn": ["Make logs writable", "Run Wordpress Tests"]
    },
    {
      "label": "Plugin zip",
      "type": "shell",
      "command": "zip",
      "args": [
        "-r",
        "pmi-user-sync-${input:pluginVersion}.zip",
        ".",
        "-x",
        ".gitignore",
        ".phpcs.xml.dist", 
        ".travis.yml", 
        "composer.*", 
        "*.xml.dist",
        "'./bin/*'", 
        "'./.git/*'",
        "'./.vscode/*'",
        "'./tests/*'",
        "'./vendor/bin/*'", 
        "'./vendor/sebastian/*'", 
        "'./vendor/yoast/wp-test-utils/*'", 
        "'./vendor/webmozart/*'", 
        "'./vendor/theseer/*'", 
        "'./vendor/phpunit/*'", 
        "'./vendor/phpspec/*'",
        "'./vendor/phpdocumentor/*'", 
        "'./vendor/phar/*'", 
        //"'./vendor/myclabs/deep-copy/*'", 
        "'./vendor/doctrine/*'"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Make logs writable",
      "type": "shell",
      "command": "sudo chmod a+w /home/angelo/Development/Projects/web/wordpress/wp-content/plugins/pmi-users-sync/admin/logs/*.log",
      "group": "test",
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "shared" 
      }
    },
    {
      "label": "Start Apache and MySQL servers",
      "type": "shell",
      "command": "sudo systemctl start apache2 & sudo systemctl start mysql",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "focus": true
      }
    },
    {
      "label": "Stop Apache and MySQL servers",
      "type": "shell",
      "command": "sudo systemctl stop apache2 & sudo systemctl stop mysql",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "pluginVersion",
      "description": "Type the version to release of the pluging.",
      "default": "x.y.z"
    }
  ]
}