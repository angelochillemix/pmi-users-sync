{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Test Wordpress",
      "type": "shell",
      "command": "./bin/install-wp-tests.sh",
      "args": [
        "wordpress_test",
        "angelo",
        "''",
        "localhost",
        "5.8.2"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "./vendor/bin/phpunit",
      "args": [
        "-v"
      ],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      }
    },
    {
      "label": "Plugin zip",
      "type": "shell",
      "command": "zip",
      "args": [
        "-r",
        "pmi-user-sync-${input:pluginVersion}.zip",
        ".",
        "-x",
        ".gitignore",
        ".phpcs.xml.dist", 
        ".travis.yml", 
        "composer.*", 
        "*.xml.dist",
        "'./bin/*'", 
        "'./.git/*'",
        "'./.vscode/*'",
        "'./tests/*'",
        "'./vendor/bin/*'", 
        "'./vendor/sebastian/*'", 
        "'./vendor/yoast/*'", 
        "'./vendor/webmozart/*'", 
        "'./vendor/theseer/*'", 
        "'./vendor/phpunit/*'", 
        "'./vendor/phpspec/*'",
        "'./vendor/phpdocumentor/*'", 
        "'./vendor/phar/*'", 
        "'./vendor/myclabs/deep-copy/*'", 
        "'./vendor/doctrine/*'"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "pluginVersion",
      "description": "Type the version to release of the pluging.",
      "default": "x.y.z"
    }
  ]
}